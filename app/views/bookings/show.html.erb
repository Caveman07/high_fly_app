<% provide(:title, 'Your Booking') %>
<h1> Booking information </h1>

<fieldset class = "ticket">
<legend>Ticket</legend>
<h3>Flight <%=@booking.flight.from_airport.code%> ~> <%=@booking.flight.to_airport.code%>  </h3>
<p><%= @booking.flight.start_datetime.strftime("%B %d, %Y") %>,<%=@booking.flight.start_datetime.strftime('%I:%M:%S %p')%></p>
<small>Flight duration <%= distance_of_time_in_words(@booking.flight.flight_duration) %> </small>
</fieldset>

<h3>Passengers:</h3>
  <div class="passangers col-md-6">
    <table class ="table table-hover">
      <thead>
        <tr>
          <th width = "10">#</th>
          <th width = "10">Name</th>
          <th width = "10">Email</th>
        </tr>
      </thead>

      <tbody>
        <% @booking.passengers.each_with_index do |p,i| %>
        <tr>
          <td> <%= i+1 %></td>
          <td> <%= p.name %></td>
          <td> <%= p.email %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
